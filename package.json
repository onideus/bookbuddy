{
  "name": "bookbuddy-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx services/api/src/server.ts",
    "build": "tsc -p services/api/tsconfig.json",
    "start": "node services/api/dist/server.js",
    "lint": "eslint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "db:setup": "./scripts/db-setup.sh setup",
    "db:start": "./scripts/db-setup.sh start",
    "db:stop": "./scripts/db-setup.sh stop",
    "db:restart": "./scripts/db-setup.sh restart",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:reset": "./scripts/db-setup.sh reset",
    "db:shell": "./scripts/db-setup.sh shell",
    "db:status": "./scripts/db-setup.sh status",
    "db:logs": "./scripts/db-setup.sh logs",
    "api:dev": "tsx services/api/src/server.ts",
    "api:build": "tsc -p services/api/tsconfig.json"
  },
  "dependencies": {
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@faker-js/faker": "^10.1.0",
    "@mswjs/data": "^0.16.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "msw": "^2.11.6",
    "prisma": "^6.18.0",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.6"
  }
}
