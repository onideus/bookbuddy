{
  "description": "Overseer permissions - extends base with full git orchestration and merge capabilities",
  "allow": [
    "Bash(git checkout *)",
    "Bash(git switch *)",
    "Bash(git merge *)",
    "Bash(git rebase *)",
    "Bash(git push *)",
    "Bash(git pull *)",
    "Bash(git commit *)",
    "Bash(git add *)",
    "Bash(git stash *)",
    "Bash(git tag *)",
    "Bash(gh pr create *)",
    "Bash(gh pr merge *)",
    "Bash(gh pr view *)",
    "Bash(gh pr list *)",
    "Bash(gh pr comment *)",
    "Bash(gh workflow run *)",
    "Bash(gh workflow list *)",
    "Bash(gh run watch *)",
    "File(write:**)",
    "File(delete:/tmp/**)",
    "Bash(mkdir *)",
    "Bash(cp *)",
    "Bash(mv *)",
    "Bash(chmod +x scripts/*)",
    "Bash(npm install *)",
    "Bash(yarn install *)",
    "Bash(pnpm install *)",
    "Bash(pip install *)",
    "Bash(bundle install)",
    "Bash(go mod *)",
    "Bash(cargo build *)",
    "Bash(make *)",
    "Bash(docker compose *)",
    "Bash(docker-compose *)",
    "Bash(bash scripts/*.sh *)",
    "Bash(node scripts/*.js *)",
    "Bash(python scripts/*.py *)"
  ],
  "deny": [
    "Bash(git push origin main --force)",
    "Bash(git push origin master --force)",
    "Bash(git push --force-with-lease origin main)",
    "Bash(git push --force-with-lease origin master)"
  ]
}
